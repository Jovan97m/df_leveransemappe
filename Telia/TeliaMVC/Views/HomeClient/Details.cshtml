@model TeliaMVC.Models.Client

@{
    ViewBag.Title = "Details";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<style>
    .ButtonBack {
        background-color: darkred;
        font-size: larger;
        font-weight: bold;
        color: white;
        padding: 10px 15px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }


    .ButtonEdit {
        background-color: darkblue;
        font-size: larger;
        font-weight: bold;
        color: white;
        padding: 10px 15px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonEdit:hover {
            color: white;
            background-color: blue;
            box-shadow: 0 13px 18px 0 rgb(30, 20, 210), 0 16px 45px 0 rgba(0,0,0,0.21);
        }

        .ButtonEdit:active {
            transform: translateY(+2px);
            background-color: darkblue;
        }

    .ContainerGreen {
        box-shadow: 2px 2px 1px 3px #b3ffb3;
        margin-bottom: 5px;
    }

    .ContainerRed {
        box-shadow: 2px 2px 1px 3px #ff9999;
        margin-bottom: 5px;
    }
    table,th,td{
        color:black;
    }
    .aNav {
        cursor: pointer;
    }

    li {
        cursor: default;
        font-weight: bold;
        font-size: large;
    }
    body {
        background-image: url(../../Resources/background2.jpg);
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }
</style>

@if (Model.FirmaNavn != null || Model.GateNavn != null || Model.Epost != null || Model.Sted != null || Model.PostNummer != null || Model.HusBokStav != null)
{
<nav aria-label="breadcrumb" class="main-breadcrumb">
    
    <ol class="breadcrumb">
        <h3>@Html.DisplayFor(model => model.FirmaNavn)</h3>
        <li class="breadcrumb-item" aria-current="page"> Profile</li>
        <li class="breadcrumb-item"><a class="aNav" onclick="location.href = '@Url.Action("Index", "Fakturaoppsetts",new { id = Model.Id})'">Fakturaoppsetts</a></li>
        @if (ViewBag.numberOfFaktures > 0)
        {
            <li class="breadcrumb-item"><a class="aNav" onclick="location.href = '@Url.Action("Index", "Nummers", new { id = Model.Id })'">Nummers</a></li>
        }
    </ol>
</nav>
}
else
{
    <h2 style="color: darkblue; font-weight: bold;">Velkommen. Fyll ut informasjon om profilen din.</h2>
}



