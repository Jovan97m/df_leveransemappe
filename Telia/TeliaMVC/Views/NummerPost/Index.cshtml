@model List<TeliaMVC.Models.Postnummer>
@{
    ViewBag.Title = "Post nummers";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<style>
    hr {
        border: 0;
        height: 3px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }

    .ButtonBack {
        background-color: darkred;
        font-size: small;
        font-weight: bold;
        color: white;
        padding: 5px 9px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }

    .inputRadio {
        border-radius: 10px;
        box-shadow: inset 0 1px 1px hsla(0,0%,100%,.8), 0 0 0 1px hsla(0,0%,0%,.6), 0 2px 3px hsla(0,0%,0%,.6), 0 4px 3px hsla(0,0%,0%,.4), 0 6px 6px hsla(0,0%,0%,.2), 0 10px 6px hsla(0,0%,0%,.2);
        cursor: pointer;
        display: inline-block;
        height: 15px;
        margin-right: 16px;
        position: relative;
        width: 15px;
        -webkit-appearance: none;
    }

    .button {
        border-radius: 10px;
        margin: 3px;
    }

    .inputRadio:hover {
        background-color: #c86cf9;
    }

    .inputRadio:checked {
        background-color: #990ae4;
    }

    .ButtonCreate {
        background-color: #990AE4;
        font-size: medium;
        font-weight: bold;
        color: white;
        padding: 6px 10px;
        border: solid 1px black;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 1px 8px 15px 0 rgba(0,0,0,0.27), 0 14px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonCreate:hover {
            color: white;
            background-color: purple;
            box-shadow: 0 13px 18px 0 #990AE4, 0 16px 45px 0 rgba(0,0,0,0.21);
        }

        .ButtonCreate:active {
            transform: translateY(+2px);
            background-color: darkblue;
        }

    .ContainerGreen {
        box-shadow: 2px 2px 1px 3px #b3ffb3;
        margin-bottom: 5px;
    }

    .btnSort {
        background-color: transparent;
        padding-top: 3px;
        padding-bottom: 3px;
        padding-left: 5px;
        padding-right: 5px;
    }
</style>

<div class="row" style="margin:2%">
<div class="col-sm-6">
@using (Html.BeginForm("Import", "NummerPost", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <input type="file" name="excelfile" class="ButtonCreate shadow-lg" />
        <button class="ButtonCreate shadow-lg" title="Denne knappen oppretter Excell-fil på datamaskinen, slik at du kan fylle den med data"
                onclick="location.href = '@Url.Action("Import", "NummerPost",new { enctype = "multipart/form-data" })'">
            <span class="glyphicon glyphicon-import"></span>Importer excel-fil
        </button>
    </div>
}
</div>
<div class="col-sm-6">
    @using (Html.BeginForm("DeleteAll", "NummerPost",FormMethod.Post, new {enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <button class="ButtonBack shadow-lg" title="Denne knappen oppretter Excell-fil på datamaskinen, slik at du kan fylle den med data"
                onclick="location.href = '@Url.Action("DeleteAll", "NummerPost", new { postnummer = Model, enctype = "multipart/form-data" })'">
            <span class="glyphicon glyphicon-trash"></span>Delete all
        </button>
    }
    </div></div>
<div class="row">
<div class="col-sm-12">
    <div style="overflow-x: auto; overflow-y:scroll; height:500px; margin-left: 7px; margin-right: 15px;" class="shadow">
        <table class="table-bordered table-sm table-hover table-striped " style="font-size: 14px;color:black;  font-weight:bold;table-layout:fixed;border-radius: 5px;">
            <thead style="background-color: #990AE4;
                      color: white;
                      text-shadow: 1px 1px black;">
                <tr>
                    <th class="col-sm-2">
                        Telefonnummer
                    </th>
                    <th scope="row" class="col-sm-2">
                        Abonnementstype
                    </th>
                    <th class="col-sm-2">
                        Fornavn
                    </th>
                    <th class="col-sm-2">
                        Etternavn
                    </th>
                    <th class="col-sm-2">
                        Bedrift_som_skal_faktureres
                    </th>

                </tr>
            </thead>
            <tbody style=" color: black; font-size: 12px;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.PostNr)
                        </td>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.Poststed)
                        </td>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.Kommunenummer)
                        </td>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.Kommunenavn)
                        </td>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.Kategory)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div></div>
    