@model IEnumerable<TeliaMVC.Models.Postnummer>

@{
    ViewBag.Title = "Post nummers";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<style>
    .button {
        font-size: smaller;
        color: white;
        text-shadow: 1px 1px black;
        margin-right: 4px;
        margin-top: 4px;
        margin-bottom: 4px;
        margin-left: 4px;
        border-radius: 12px;
    }

        .button:active {
            transform: translateY(+2px);
        }

    .ButtonCreate {
        background-color: #990AE4;
        font-size: medium;
        font-weight: bold;
        color: white;
        padding: 6px 10px;
        border: solid 1px black;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 1px 8px 15px 0 rgba(0,0,0,0.27), 0 14px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonCreate:hover {
            color: white;
            background-color: purple;
            box-shadow: 0 13px 18px 0 #990AE4, 0 16px 45px 0 rgba(0,0,0,0.21);
        }

        .ButtonCreate:active {
            transform: translateY(+2px);
            background-color: darkblue;
        }

    .inputRadio {
        border-radius: 10px;
        box-shadow: inset 0 1px 1px hsla(0,0%,100%,.8), 0 0 0 1px hsla(0,0%,0%,.6), 0 2px 3px hsla(0,0%,0%,.6), 0 4px 3px hsla(0,0%,0%,.4), 0 6px 6px hsla(0,0%,0%,.2), 0 10px 6px hsla(0,0%,0%,.2);
        cursor: pointer;
        display: inline-block;
        height: 15px;
        margin-right: 16px;
        position: relative;
        width: 15px;
        -webkit-appearance: none;
    }

        .inputRadio:hover {
            background-color: #c86cf9;
        }

        .inputRadio:checked {
            background-color: #990ae4;
        }

    hr {
        border: 0;
        height: 3px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }

    .ButtonBack {
        background-color: darkred;
        font-size: medium;
        font-weight: bold;
        color: white;
        padding: 7px 10px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }
</style>
<br />
@using (Html.BeginForm("Import", "NummerPost", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-lg-4">
        <input type="file" name="excelfile" class="ButtonCreate shadow-lg" />
        <button class="ButtonCreate shadow-lg" title="Denne knappen oppretter Excell-fil på datamaskinen, slik at du kan fylle den med data"
                onclick="location.href = '@Url.Action("Import", "NummerPost",new { enctype = "multipart/form-data" })'">
            <span class="glyphicon glyphicon-import"></span>Importer excel-fil
        </button>
    </div>
}
<div class="col-lg-4">
    <button class="ButtonCreate shadow-lg" onclick="location.href = '@Url.Action("DeleteAll","NummerPost",new{ enctype = "multipart/form-data" })'">Delete all</button>
</div>
<div class="col-lg-4">
    <button class=" ButtonBack" onclick="location.href = '@Url.Action("Index", "Home", new { id_sesije=ViewBag.ID })';return false;"><span class="glyphicon glyphicon-arrow-left"></span>  Tilbake</button>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poststed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kommunenummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kommunenavn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poststed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kommunenummer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kommunenavn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategory)
            </td>
        </tr>
    }

</table>


