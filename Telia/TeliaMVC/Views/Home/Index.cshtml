
@model PagedList.IPagedList<TeliaMVC.Models.Client>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Home Page";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<style>
    .buttonLink {
        color: black;
        font-weight: bold;
        font-size: medium;
        font-family: 'Times New Roman';
        border-radius: 14px;
        box-shadow: 0 0px 8px 0 rgba(0, 0, 0, 0.2), 0 4px 10px 0 rgba(0, 0, 0, 0.19);
    }
    .buttonAdd {
        font-size: medium;
        font-size: smaller;
        color: white;
        text-shadow: 1px 1px black;
        margin-right: 2px;
        margin-top: 2px;
    }
        .buttonLink:hover {
            box-shadow: 0 5px 11px 1px rgba(0, 0, 0, 0.21), 0 9px 20px 0 rgba(0, 0, 0, 0.19);
        }
    .text{
        margin-left:35%;
    }
    .jumbo {
        margin-top:10px;
        padding:10px;
        color:black;
        font-size: 18px;
        box-shadow: 0 3px 12px 0 rgba(0, 0, 0, 0.19), 0 4px 15px 0 rgba(0, 0, 0, 0.17);
    }
</style>
<div class=" jumbo" style="background-color: #ffaa80; ">
    <h3 class="text">Hjelp</h3>
    <p class=" text" >
        <span style="font-weight: bold;">Produkter:</span>  Trykk på de produktene du ønsker for å åpne respektive faner. Hver fane må så fylles ut.
    </p>
    <p class=" text">
        <span style="font-weight: bold;">
            Prisplaner:
        </span>  Velg type abonnement du ønsker å tilby kunden før listen sendes til kunde! Trykk så Til Forside.
    </p>
    <p class=" text">
        <span style="font-weight: bold;">Binding:</span> Velg om kunden skal ha 24- eller 36mnd bindingsavtale.

    </p>
</div>

<div class="row" style="margin-left: 10px;">
    <h2>Produkter</h2>
    <div class="col-md-2">

        <p><button class="btn btn-default buttonLink" data-toggle="tooltip" data-placement="bottom" title="Arbeide med faktures" onclick="location.href = '@Url.Action("Index", "Fakturaoppsetts")'">FakturaOppsett &raquo;</button></p>
        <p><a class="btn btn-default buttonLink">Brukerliste &raquo;</a></p>
        
    </div>

    <div class="col-md-4">
                <h4>
                    Oversikt over kunder
                </h4>
        <p>
                Legg til ny klient:  
                 <button class="btn-info  shadow-lg buttonLink" data-toggle="tooltip" data-placement="bottom" title="Legg til ny klient"
                                 onclick="location.href='@Url.Action("Create", "Home")'">
                <span class="glyphicon glyphicon-plus"></span>    Legg til en klient</button>
        </p>

        <div style="overflow-x:auto; margin-left:15px; margin-right:15px;" class="shadow">



            <table class="table table-bordered">
                <thead>

                    <tr>
                        <th class="col-sm-0">
                            ID
                        </th>
                        <th scope="row" class="col-sm-2">
                            OrgNummer
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-sm-1">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="col-sm-1">
                                @Html.DisplayFor(modelItem => item.Orgnummer)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
         new { page }))


        </div>


    </div>
        </div>