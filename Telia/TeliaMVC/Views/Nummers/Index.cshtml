<style>
    hr {
        border: 0;
        height: 3px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }

    .ButtonBack {
        background-color: darkred;
        font-size: medium;
        margin-left:10px;
        margin-top:5px;
        font-weight: bold;
        color: white;
        padding: 7px 10px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }

    .inputRadio {
        border-radius: 10px;
        box-shadow: inset 0 1px 1px hsla(0,0%,100%,.8), 0 0 0 1px hsla(0,0%,0%,.6), 0 2px 3px hsla(0,0%,0%,.6), 0 4px 3px hsla(0,0%,0%,.4), 0 6px 6px hsla(0,0%,0%,.2), 0 10px 6px hsla(0,0%,0%,.2);
        cursor: pointer;
        display: inline-block;
        height: 15px;
        margin-right: 16px;
        position: relative;
        width: 15px;
        -webkit-appearance: none;
    }

    .button {
        border-radius: 6px;
        margin: 1px;
    }
    tbody {
        background-color: RGB(230,231,231);
    }

    .inputRadio:hover {
        background-color: #c86cf9;
    }

    .inputRadio:checked {
        background-color: #990ae4;
    }

    .ButtonCreate {
        background-color: #990AE4;
        font-size: medium;
        font-weight: bold;
        color: white;
        padding: 6px 10px;
        border: solid 1px black;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 1px 8px 15px 0 rgba(0,0,0,0.27), 0 14px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonCreate:hover {
            color: white;
            background-color: purple;
            box-shadow: 0 13px 18px 0 #990AE4, 0 16px 45px 0 rgba(0,0,0,0.21);
        }

        .ButtonCreate:active {
            transform: translateY(+2px);
            background-color: darkblue;
        }

    .ContainerGreen {
        box-shadow: 2px 2px 1px 3px #b3ffb3;
        margin-bottom: 5px;
    }

    .btnSort {
        background-color: transparent;
        padding-top:2px;
        padding-bottom: 2px;
        padding-left: 3px;
        padding-right: 3px;
    }
    .aNav{
        cursor:pointer;
    }
    li {
        cursor: default;
        font-weight: bold;
        font-size: large;
    }
    .buttonInfoColor {
        width: 15px;
        height: 15px;
        margin-right: 10px;
        cursor: default;
        margin-left: 15px;
    }

        .buttonInfoColor:hover {
            cursor: default;
        }
</style>

