@model TeliaMVC.Models.Admin

@{
    Layout = null;

}


<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="icon" href="@Url.Content("~/Resources/telia.png")" />
    <style>
        body, html {
            height: 100%;
            overflow-x: hidden;
            overflow-y: hidden;
        }

        .bg {
            /* The image used */
            background-image: url("../../Resources/background.jpg");
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        .login-form {
            left: 60%;
            top: 70%;
            margin-left: -25%;
            position: absolute;
            margin-top: -25%;
            background-color: rgb(245,245,245,0.5);
            width: 500px;
            height: 400px;
            border-radius: 6px;
            box-shadow: 3px 4px 8px 8px rgb(206, 192, 209);
        }

        #form-image {
            margin-top: 35px;
            margin-left: 130px;
            width: center;
        }

        .textInput input {
            width: 120%;
            padding: 7px 14px;
            margin: 4px 0;
            box-sizing: border-box;
            border: 2px solid silver;
            border-radius: 4px;
        }

        .textForm input:focus {
            outline: none;
            border: 3px solid rebeccapurple;
        }

        .textInput label {
            font-size: 1.2em;
        }

        #form-submit input[type=submit] {
            background-color: rebeccapurple;
            border: none;
            color: white;
            padding: 16px 32px;
            font-size: 14px;
            text-decoration: none;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 6px;
        }

            #form-submit input[type=submit]:hover {
                background-color: purple;
                cursor: pointer;
            }

        .form-error-message {
            display: block;
            position: absolute;
            left: 25%;
            top: 285px;
            color: red;
        }

        #form-username {
            display: block;
            position: absolute;
            left: 25%;
            top: 130px;
        }

        #form-password {
            display: block;
            position: absolute;
            left: 25%;
            top: 220px;
        }

        #form-submit {
            position: absolute;
            left: 38%;
            top: 310px;
        }

        /* If you want the content centered horizontally and vertically */
        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        #form-adminLogin {
            display: block;
            position: absolute;
            left: 50%;
            top: 150px;
        }

        .adminButton {
            background-color: lightpink;
            opacity: 75%;
            color: black;
        }
    </style>
</head>

<body class="bg">
    <div class="login-form" id="login-div">
        <div id="form-image"><img src="../../Resources/Telia-Company.png"></div>
        @using (Html.BeginForm("AuthoriseAdmin", "Login", FormMethod.Post))
        {
            <br />
            <div id="form-username" class="textInput">
                @Html.LabelFor(model => model.UserName, "Admin username:")<br>
                @Html.EditorFor(model => model.UserName)
                <div class="form-error-message">
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <br />
            <div id="form-password" class="textInput">
                @Html.LabelFor(model => model.Password)<br>
                @Html.EditorFor(model => model.Password)
                <div class="form-error-message">
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-error-message">
                @Html.DisplayFor(model => model.LoginErrorMsg)
            </div>
            <br />
            <div id="form-submit">
                <input type="submit" value="Login">
            </div>

        }

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </div>
</body>
</html>
