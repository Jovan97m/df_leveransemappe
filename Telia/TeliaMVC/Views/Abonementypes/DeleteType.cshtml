            @Html.TextBox("test", ViewBag.id as int?);
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <p style="margin-left:10px;margin-top:12px;"><a class="ButtonBack" onclick="location.href = '@Url.Action("Details", "Abonementypes",new { id = ViewBag.id})'">Return &raquo;</a></p>
        </div>
    }
</div>
