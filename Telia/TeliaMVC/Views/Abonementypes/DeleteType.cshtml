            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Reference_code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reference_code)
        </dd>

    </dl>

