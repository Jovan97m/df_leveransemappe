@model IEnumerable<TeliaMVC.Models.Abonementype>

@{
    ViewBag.Title = "Home Page";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<style>
    hr {
        border: 0;
        height: 4px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }
    .Table{
        font-weight:bold;
        font-size: 15px;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        color:black;
        text-shadow: 1px 0.1px white;
        margin-left: 10px;
        border: 1px solid black;
    }
    .HeaderTable{
        font-size: 19px;
        font-style: italic;
        background-color: blanchedalmond;
        text-align: center;
    }
    .btn {
        font-size: medium;
        font-weight: bold;
        margin: 4px;
        padding-left: 10px;
        padding-right: 10px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.29), 0 15px 30px 0 rgba(0,0,0,0.3);
        margin-left: 24px;
    }
    .btnEdit {
        font-size: medium;
        border-radius: 6px;
        font-weight: bold;
        color: white;
        margin: 2px;
        padding-top: 4px;
        padding-bottom: 4px;
        padding-left: 11px;
        padding-right: 11px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.29), 0 15px 30px 0 rgba(0,0,0,0.3);
        margin-left: 32px;
        background-color: darkblue;
    }
        .btnEdit:hover {
            color: white;
            background-color: blue;
            box-shadow: 0 9px 13px 0 darkblue, 0 12px 20px 0 rgba(0,0,0,0.19);
        }

        .btnEdit:active {
            transform: translateY(+2px);
            background-color: darkblue;
        }

    .btnDelete {
        font-size: medium;
        border-radius: 6px;
        font-weight: bold;
        color: white;
        margin: 2px;
        padding-top: 4px;
        padding-bottom: 4px;
        padding-left: 11px;
        padding-right: 11px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.29), 0 15px 30px 0 rgba(0,0,0,0.3);
        margin-left: 31px;
        background-color: darkred;
    }

        .btnDelete:hover {
            color: white;
            background-color: red;
            box-shadow: 0 9px 13px 0 darkred, 0 12px 20px 0 rgba(0,0,0,0.19);
        }

        .btnDelete:active {
            transform: translateY(+2px);
            background-color: darkred;
        }

    .btnDetails {
        font-size: medium;
        border-radius: 5px;
        font-weight: bold;
        color: white;
        margin: 2px;
        padding-top: 4px;
        padding-bottom: 4px;
        padding-left: 11px;
        padding-right: 11px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.29), 0 15px 30px 0 rgba(0,0,0,0.3);
        margin-left: 31px;
        background-color: darkgreen;
    }

        .btnDetails:hover {
            color: white;
            background-color: green;
            box-shadow: 0 9px 13px 0 darkgreen, 0 12px 20px 0 rgba(0,0,0,0.19);
        }

        .btnDetails:active {
            transform: translateY(+2px);
            background-color: darkgreen;
        }
    .btnType {
        font-size: medium;
        border-radius: 6px;
        font-weight: bold;
        color: white;
        margin: 2px;
        padding-top: 4px;
        padding-bottom: 4px;
        padding-left: 11px;
        padding-right: 11px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.29), 0 15px 30px 0 rgba(0,0,0,0.3);
        margin-left: 31px;
        background-color: blue;
    }

        .btnType:hover {
            color: white;
            background-color: dodgerblue;
            box-shadow: 0 9px 13px 0 blue, 0 12px 20px 0 rgba(0,0,0,0.19);
        }

        .btnType:active {
            transform: translateY(+2px);
            background-color: blue;
        }


    .ButtonAdd {
        background-color: darkgreen;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        padding: 6px 20px;
        border-radius: 15px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }
        .ButtonAdd:hover {
            color: white;
            background-color: forestgreen;
            box-shadow: 0 13px 18px 0 darkgreen, 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonAdd:active {
            transform: translateY(+2px);
            background-color: darkgreen;
        }
    .ButtonBack {
        background-color: darkred;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        margin-top:10px;
        padding: 9px 20px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }
    .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }

</style>

<h1>Avtales</h1>
<p>
    Seksjon for å legge til og redigere avtale for klienter
</p>
<hr/>
<div class=" row">
    <div class="col-sm-3" style="margin-left:10px;">
        <button class=" ButtonAdd" data-toggle="tooltip" data-placement="bottom" title="Opprett ny abonementype"
                onclick="location.href = '@Url.Action("Create", "Abonementypes")'">
            <span class="glyphicon glyphicon-duplicate"></span> Legg til ny Avtale
        </button>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <table class="table-bordered table-hover table-striped Table" style="margin-top:15px;">
            <tr>
                <th class="col-md-1 HeaderTable">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-1 HeaderTable">
                    @Html.DisplayNameFor(model => model.Num_type)
                </th>
                <th class="col-sm-push-0 HeaderTable"></th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td coldspan="10" style="font-size:18px;color:red;margin-left:5px;">
                        No document found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => item.Num_type)
                        </td>
                        <td class="col-sm-0">
                            <button class="btnEdit" data-toggle="tooltip" data-placement="bottom" title="Endre navnet på typen"
                                    onclick="location.href = '@Url.Action("Edit", "Abonementypes", new { id = item.Id })'">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                            <button class="btnDelete" data-toggle="tooltip" data-placement="bottom" title="Slett valgt abonementype"
                                    onclick="location.href = '@Url.Action("Delete", "Abonementypes", new { id = item.Id })'">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                            <button class="btnDetails" data-toggle="tooltip" data-placement="bottom" title="Se alle abonemetyper som er koblet til denne avtalen"
                                    onclick="location.href = '@Url.Action("Details", "Abonementypes", new { id = item.Id })'">
                                <span class="glyphicon glyphicon-th-list"></span>
                            </button>
                            <button class="btnType" data-toggle="tooltip" data-placement="bottom" title="Legg til ny type for valgt abonementype"
                                    onclick="location.href = '@Url.Action("AddType", "Abonementypes", new { id = item.Id })'">
                                <span class="glyphicon glyphicon-duplicate"></span>
                            </button>

                        </td>
                    </tr>
                }
            }
            </table>
    </div>
</div>
<div class="col-sm-6">

</div>
    <p style="margin-left:10px;margin-top:12px;"><a class="ButtonBack" onclick="location.href = '@Url.Action("Index", "Home")'">Return &raquo;</a></p>

   
