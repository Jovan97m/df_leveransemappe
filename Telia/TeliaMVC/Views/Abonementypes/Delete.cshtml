@model TeliaMVC.Models.Abonementype

@{
    ViewBag.Title = "Delete";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<style>
    hr {
        border: 0;
        height: 4px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }

    .TextBox {
        border: 1px solid Purple;
        font-weight: bold;
        color: black;
        box-shadow: 0 8px 8px -9px black inset;
    }

        .TextBox:scope, .TextBox:active, .TextBox::after, .TextBox + span {
            box-shadow: 0 5px 5px -7px purple inset;
        }

    .Labela {
        margin-bottom: 3px;
        font-size: 20px;
        color: black;
        font-weight: bolder;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .ButtonBack {
        background-color: darkred;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        margin-top: 10px;
        padding: 9px 20px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }

    .ButtonAdd {
        background-color: darkgreen;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        padding: 6px 20px;
        border-radius: 15px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonAdd:hover {
            color: white;
            background-color: forestgreen;
            box-shadow: 0 13px 18px 0 darkgreen, 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonAdd:active {
            transform: translateY(+2px);
            background-color: darkgreen;
        }
</style>

<h1 style="color:red;">Are you sure you want to delete this type?</h1>
<div>
    <hr />
    <dl class="dl-horizontal" style="font-weight:bold;font-size:20px;">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Num_type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Num_type)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<p style="margin-left:100px;">
    <input type="submit" value="Delete" class="ButtonAdd" />
</p>
        <p style="margin-left:100px;margin-top:12px;"><a class="ButtonBack" onclick="location.href = '@Url.Action("Index", "Abonementypes")'">Return &raquo;</a></p>
    }
</div>
