@model TeliaMVC.Models.Abonementype

@{
    ViewBag.Title = "Create";
    if (Session["Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<style>
    hr {
        border: 0;
        height: 4px;
        background-image: linear-gradient(to right, azure,pink, purple, pink,azure);
        box-shadow: 0 10px 10px -10px purple inset;
    }
    .SelectBox {
        border: 1px solid Purple;
        font-weight: bold;
        color: black;
        box-shadow: 0 8px 8px -9px black inset;
    }

        .SelectBox:scope, .SelectBox:active, .SelectBox::after, .SelectBox + span {
            box-shadow: 0 5px 5px -7px purple inset;
        }
    .TextBox {
        border: 1px solid Purple;
        font-weight: bold;
        color: black;
        box-shadow: 0 8px 8px -9px black inset;
    }

        .TextBox:scope, .TextBox:active, .TextBox::after, .TextBox + span {
            box-shadow: 0 5px 5px -7px purple inset;
        }

    .Labela {
        margin-bottom:3px;
        font-size: 20px;
        color: black;
        font-weight: bolder;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
    .ButtonBack {
        background-color: darkred;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        margin-top: 10px;
        padding: 9px 20px;
        border-radius: 16px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonBack:hover {
            color: white;
            background-color: red;
            box-shadow: 0 13px 18px 0 rgb(200, 0, 0), 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonBack:active {
            transform: translateY(+2px);
            background-color: darkred;
        }
    .ButtonAdd {
        background-color: darkgreen;
        font-size: medium;
        font-weight: bold;
        cursor: pointer;
        color: white;
        padding: 6px 20px;
        border-radius: 15px;
        border-color: transparent;
        text-shadow: 1px 1px black;
        box-shadow: 0 8px 14px 0 rgba(0,0,0,0.24), 0 13px 30px 0 rgba(0,0,0,0.19);
    }

        .ButtonAdd:hover {
            color: white;
            background-color: forestgreen;
            box-shadow: 0 13px 18px 0 darkgreen, 0 16px 45px 0 rgba(0,0,0,0.19);
        }

        .ButtonAdd:active {
            transform: translateY(+2px);
            background-color: darkgreen;
        }
</style>
<h2>Legg til ny avtale</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5 Labela" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control TextBox" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Num_type, htmlAttributes: new { @class = "control-label col-md-5 Labela" })
        <div class="col-md-6">
            @Html.DropDownList("NumType", new List<SelectListItem>
                             { new SelectListItem { Text = "Mobile", Value = "M", Selected=true},
                               new SelectListItem { Text = "Fixed", Value = "F"},
                               new SelectListItem { Text = "Internet", Value = "I"} }, htmlAttributes: new { @class = "form-control SelectBox" })

            @Html.ValidationMessageFor(model => model.Num_type, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            <input type="submit" value="Create" class="ButtonAdd" />
        </div>
    </div>
</div>
}
<p style="margin-left:10px;margin-top:12px;"><a class="ButtonBack" onclick="location.href = '@Url.Action("Index", "Abonementypes")'">Tilbake &raquo;</a></p>
